        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_text"
            android:orientation="horizontal"
            android:padding="6dip"
            android:weightSum="12">

            <TextView
                style="@style/TextView.Labels"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/startDate" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_startDate"
                style="@style/TextView.Details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_text"
            android:orientation="horizontal"
            android:padding="6dip"
            android:weightSum="12">

            <TextView
                style="@style/TextView.Labels"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/endDate" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_endDate"
                style="@style/TextView.Details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textStyle="bold" />
        </LinearLayout>

        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_text"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="6dip"
            android:weightSum="12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Session"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="6dip"
                android:weightSum="12">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_startTime"
                        style="@style/TextView.Details"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_edit_text"
                        android:padding="10dip"
                        android:text="3:00PM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mealtime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView_startTime"
                        android:layout_gravity="center"
                        android:text="morning" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_midTime"
                style="@style/TextView.Details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/border_edit_text"
                android:padding="10dip"
                android:text="9:00AM"
                android:textStyle="bold" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/mealtime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_midTime"
                    android:text="noon" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_endTime"
                style="@style/TextView.Details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/border_edit_text"
                android:padding="10dip"
                android:text="9:00AM"
                android:textStyle="bold" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/mealtime3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_midTime"
                android:text="evening" />
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <include layout="@layout/separator" />

